                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="Green" />
                            <Setter TargetName="bgrect" Property="Fill" Value="Green" />
                            <Setter TargetName="bgrect" Property="Stretch" Value="Uniform" />
